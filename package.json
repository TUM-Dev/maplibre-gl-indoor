{
  "name": "maplibre-gl-indoor",
  "description": "A MapLibre plugin to visualize multi-level buildings",
  "main": "dist/lib/map-gl-indoor.umd.js",
  "module": "dist/lib/map-gl-indoor.es.js",
  "types": "dist/lib/map-gl-indoor.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "private": "true",
  "scripts": {
    "build-lib": "tsc && vite build --emptyOutDir -c vite.lib.config.js",
    "serve": "vite preview",
    "lint": "eslint src && tsc --noEmit && prettier --write .",
    "build-dts": "dts-bundle-generator -o dist/lib/map-gl-indoor.d.ts src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/map-gl-indoor/map-gl-indoor.git"
  },
  "keywords": [
    "indoor",
    "building",
    "multi-level",
    "floors",
    "geojson",
    "map",
    "maplibre"
  ],
  "author": "Thibaud Michel",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@turf/centroid": "6.5.0",
    "@types/eslint__js": "^8.42.3",
    "@types/geojson": "7946.0.14",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "dts-bundle-generator": "9.5.1",
    "eslint": "9.8.0",
    "events": "3.3.0",
    "prettier": "3.3.3",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.0.0",
    "vite": "5.3.5"
  },
  "dependencies": {
    "@turf/bbox": "7.0.0",
    "@turf/destination": "7.0.0",
    "@turf/distance": "7.0.0",
    "maplibre-gl": "4.5.1"
  },
  "exports": {
    ".": {
      "import": "./dist/lib/map-gl-indoor.es.js",
      "require": "./dist/lib/map-gl-indoor.umd.js"
    }
  }
}
