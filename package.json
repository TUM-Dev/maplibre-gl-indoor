{
  "name": "map-gl-indoor",
  "description": "A MapGL plugin to visualize multi-level buildings",
  "version": "0.5.0",
  "main": "dist/lib/map-gl-indoor.umd.js",
  "module": "dist/lib/map-gl-indoor.es.js",
  "types": "dist/lib/map-gl-indoor.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "scripts": {
    "build-lib": "tsc && vite build --emptyOutDir -c vite.lib.config.js",
    "serve": "vite preview",
    "lint": "eslint --ext .js,.ts src",
    "build-dts": "dts-bundle-generator -o dist/lib/map-gl-indoor.d.ts src/index.ts",
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/map-gl-indoor/map-gl-indoor.git"
  },
  "keywords": [
    "indoor",
    "building",
    "multi-level",
    "floors",
    "geojson",
    "map",
    "maplibre"
  ],
  "author": "Thibaud Michel",
  "license": "MIT",
  "devDependencies": {
    "@turf/centroid": "^6.5.0",
    "@types/geojson": "^7946.0.8",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "dts-bundle-generator": "^6.5.0",
    "eslint": "^8.11.0",
    "events": "^3.3.0",
    "typescript": "^4.6.2",
    "vite": "^3.1.4"
  },
  "dependencies": {
    "@turf/bbox": "^6.5.0",
    "@turf/destination": "^6.5.0",
    "@turf/distance": "^6.5.0",
    "maplibre-gl": "4.5.1"
  },
  "exports": {
    ".": {
      "import": "./dist/lib/map-gl-indoor.es.js",
      "require": "./dist/lib/map-gl-indoor.umd.js"
    }
  }
}
